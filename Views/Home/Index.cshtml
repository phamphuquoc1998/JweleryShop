@{
    ViewData["Title"] = "Home Page";
}
@*@model List<WebApplication1.Entities.Sanpham>*@
@model IPagedList<WebApplication1.Entities.Sanpham>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core.Common;

<div class="container mt-2">
        <div class=" w-100 " style="border-radius:5px">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/imgs/mainbanner.jpeg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/imgs/mainbanner2.jpeg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/imgs/mainbanner3.jpeg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
<div class="site-section">
    <div class="container">
        <div class="title-section mb-5">
            <h2 class="text-uppercase"><span class="d-block">Discover</span> The Collections</h2>
        </div>
        <div class="row align-items-stretch">
            <div class="col-lg-8">
                <div class="product-item sm-height-1 full-height bg-gray">
                    <form class="form-inline dropdown-item" asp-action="timloaisp" asp-controller="Home" method="get" enctype="multipart/form-data">
                        <input name="masearch" type="hidden" value="Ma1" />
                        <img src="~/imgs/sanpham/1.jpeg" style="max-width:100%;max-height:100%; margin-top:-40px;" alt="Image">
                        <button type="submit" id="nutsearch" class="w-100 btn">BraceLet</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="product-item sm-height bg-gray mb-4">
                    <form class="form-inline dropdown-item" asp-action="timloaisp" asp-controller="Home" method="get" enctype="multipart/form-data">
                        <input name="masearch" type="hidden" value="Ma2" />
                        <img src="~/imgs/sanpham/1.jpeg" style="max-width:100%;max-height:100%;margin-top:-40px;" alt="Image">
                        <button type="submit" id="nutsearch" class="w-100 btn">Earings</button>
                    </form>
                </div>
                <div class="product-item sm-height bg-gray">
                    <form class="form-inline dropdown-item" asp-action="timloaisp" asp-controller="Home" method="get" enctype="multipart/form-data">
                        <input name="masearch" type="hidden" value="3" />
                        <img src="~/imgs/sanpham/1.jpeg" style="max-width:100%;max-height:100%;margin-top:-40px;" alt="Image">
                        <button type="submit" id="nutsearch" class="w-100 btn">Neckless</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="title-section mb-5 col-12">
                <h2 class="text-uppercase">Popular Products</h2>
            </div>
        </div>
        <div class="khungSanPham2 ">
            <div class="clear"></div>
                <div class="allProduct ">
                    <div id="demoSignalr" class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4 mb-6">
                                <div class="card h-100 text-center">
                                    <img class="card-img-top"
                                         src="~/imgs/sanpham/@item.HinhAnh" alt=""></img>
                                    <div class="card-body">
                                        <b style="color:black; font-weight:bolder"><p class="cardtext">Prices: $ @item.DonGia </p></b>
                                        <h5 class="cardtitle">@item.TenSP</h5>

                                    </div>
                                    <div class="card-footer">
                                        <a asp-controller="TrangChiTiet"
                                           asp-action="Index" asp-route-id="@item.MaSP" asp-route-name="@item.TenSP" class="btn btn-primary">Details</a>
                                        <a asp-controller="GioHang" asp-action="Buy" asp-route-id="@item.MaSP" class="btn btn-info">Buy now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
            </div>
            <div class="clear"></div>
            <br />
            <br />
            <div class="w-100 text-center"><h4>Pages @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</h4></div>
            <div class="w-100 text-center d-flex justify-content-center">
                <h5> @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</h5>
            </div>
        </div>

    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="title-section text-center mb-5 col-12">
                <h2 class="text-uppercase">Most Rated</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 block-3">
                <div class="nonloop-block-3 owl-carousel">
                    @*<div id="demoSignalr">*@
                        @foreach (var item in Model)
                        {
                            <div class="item text-center">
                                <div class="item-entry">
                                    <img class="card-img-top"
                                         src="~/imgs/sanpham/@item.HinhAnh" alt=""></img>
                                    <div class="card-body">
                                        <b style="color:black; font-weight:bolder"><p class="cardtext">  <strong class="item-price">$@item.DonGia</strong></p></b>
                                        <h5 class="cardtitle">@item.TenSP</h5>
                                        
                                        <div class="star-rating">
                                            <span class="icon-star2 text-warning"></span>
                                            <span class="icon-star2 text-warning"></span>
                                            <span class="icon-star2 text-warning"></span>
                                            <span class="icon-star2 text-warning"></span>
                                            <span class="icon-star2 text-warning"></span>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <a asp-controller="TrangChiTiet"
                                           asp-action="Index" asp-route-id="@item.MaSP" asp-route-name="@item.TenSP" class="btn btn-primary">Details</a>
                                        <a asp-controller="GioHang" asp-action="Buy" asp-route-id="@item.MaSP" class="btn btn-info">Buy now</a>
                                    </div>
                                </div>
                            </div>
                        }
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</div>



<div class="clear"></div>